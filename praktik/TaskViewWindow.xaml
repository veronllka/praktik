<Window x:Class="praktik.TaskViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Информация о задаче" Height="700" Width="600" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок документа -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="30,20">
            <StackPanel>
                <TextBlock Text="НАРЯД-ЗАДАЧА" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1976D2"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="txtTitle" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           TextWrapping="Wrap"
                           Foreground="#212121"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Контент документа -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel Margin="30,25">
                <!-- ID задачи -->
                <TextBlock x:Name="txtTaskId" 
                           FontSize="12" 
                           Foreground="#757575" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Right"/>

                <!-- Объект -->
                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ОБЪЕКТ" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Margin="0,0,0,8" 
                                   Foreground="#424242"/>
                        <TextBlock x:Name="txtSite" 
                                   FontSize="15" 
                                   TextWrapping="Wrap" 
                                   Foreground="#212121"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Бригада и бригадир -->
                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="БРИГАДА" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Margin="0,0,0,8" 
                                   Foreground="#424242"/>
                        <TextBlock x:Name="txtCrew" 
                                   FontSize="15" 
                                   TextWrapping="Wrap" 
                                   Foreground="#212121"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtBrigadier" 
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   Foreground="#616161"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Период выполнения -->
                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ПЕРИОД ВЫПОЛНЕНИЯ" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Margin="0,0,0,8" 
                                   Foreground="#424242"/>
                        <TextBlock x:Name="txtPeriod" 
                                   FontSize="15" 
                                   Foreground="#212121"/>
                    </StackPanel>
                </Border>

                <!-- Приоритет и статус -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ПРИОРИТЕТ" 
                                       FontWeight="Bold" 
                                       FontSize="13" 
                                       Margin="0,0,0,8" 
                                       Foreground="#424242"/>
                            <TextBlock x:Name="txtPriority" 
                                       FontSize="15" 
                                       Foreground="#212121"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="СТАТУС" 
                                       FontWeight="Bold" 
                                       FontSize="13" 
                                       Margin="0,0,0,8" 
                                       Foreground="#424242"/>
                            <TextBlock x:Name="txtStatus" 
                                       FontSize="15" 
                                       Foreground="#212121"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Прогресс и комментарий -->
                <StackPanel x:Name="pnlProgress" Visibility="Collapsed" Margin="0,0,0,20">
                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ПОСЛЕДНИЙ ПРОГРЕСС" 
                                       FontWeight="Bold" 
                                       FontSize="13" 
                                       Margin="0,0,0,8" 
                                       Foreground="#424242"/>
                            <TextBlock x:Name="txtProgress" 
                                       FontSize="15" 
                                       Margin="0,0,0,15" 
                                       Foreground="#212121"/>
                            <TextBlock Text="КОММЕНТАРИЙ" 
                                       FontWeight="Bold" 
                                       FontSize="13" 
                                       Margin="0,0,0,8" 
                                       Foreground="#424242"/>
                            <TextBlock x:Name="txtComment" 
                                       FontSize="15" 
                                       TextWrapping="Wrap" 
                                       Foreground="#212121"
                                       LineHeight="22"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Описание -->
                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ОПИСАНИЕ" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Margin="0,0,0,8" 
                                   Foreground="#424242"/>
                        <TextBlock x:Name="txtDescription" 
                                   FontSize="15" 
                                   TextWrapping="Wrap" 
                                   Foreground="#212121"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="30,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Закрыть" 
                        Click="btnClose_Click" 
                        Width="120" 
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                Padding="12,10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1565C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

