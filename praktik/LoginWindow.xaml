<Window x:Class="praktik.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktik"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Вход в систему" Height="580" Width="450" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#9C27B0" Offset="0"/>
                <GradientStop Color="#7B1FA2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Современные анимированные элементы -->
        <Grid>
            <!-- Фоновый градиент -->
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5C6BC0" Offset="0"/>
                        <GradientStop Color="#3F51B5" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            
            <!-- Анимированные круги -->
            <Canvas>
                <!-- Большой круг с пульсацией -->
                <Ellipse Width="200" Height="200" Canvas.Left="125" Canvas.Top="-50">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#403F51B5" Offset="0"/>
                            <GradientStop Color="#003F51B5" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="circleScale" ScaleX="1" ScaleY="1" CenterX="100" CenterY="100"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Ellipse.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="circleScale" 
                                        Storyboard.TargetProperty="ScaleX"
                                        From="0.8" To="1.2" Duration="0:0:4" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="circleScale" 
                                        Storyboard.TargetProperty="ScaleY"
                                        From="0.8" To="1.2" Duration="0:0:4" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- Строительные элементы -->
                <iconPacks:PackIconMaterial Kind="OfficeBuildingOutline" Width="100" Height="100" Canvas.Left="30" Canvas.Top="100" Foreground="#BBDEFB">
                    <iconPacks:PackIconMaterial.RenderTransform>
                        <TranslateTransform x:Name="buildingAnimation" X="0" Y="0"/>
                    </iconPacks:PackIconMaterial.RenderTransform>
                    <iconPacks:PackIconMaterial.Triggers>
                        <EventTrigger RoutedEvent="iconPacks:PackIconMaterial.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="buildingAnimation" 
                                        Storyboard.TargetProperty="Y"
                                        From="-5" To="5" Duration="0:0:3" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </iconPacks:PackIconMaterial.Triggers>
                </iconPacks:PackIconMaterial>
                
                <iconPacks:PackIconMaterial Kind="Wrench" Width="40" Height="40" Canvas.Right="50" Canvas.Top="150" Foreground="#FFECB3">
                    <iconPacks:PackIconMaterial.RenderTransform>
                        <RotateTransform x:Name="wrenchRotation" Angle="0" CenterX="20" CenterY="20"/>
                    </iconPacks:PackIconMaterial.RenderTransform>
                    <iconPacks:PackIconMaterial.Triggers>
                        <EventTrigger RoutedEvent="iconPacks:PackIconMaterial.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="wrenchRotation" 
                                        Storyboard.TargetProperty="Angle"
                                        From="-15" To="15" Duration="0:0:1" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </iconPacks:PackIconMaterial.Triggers>
                </iconPacks:PackIconMaterial>
                
                <iconPacks:PackIconMaterial Kind="Cogs" Width="60" Height="60" Canvas.Right="80" Canvas.Bottom="100" Foreground="#B3E5FC">
                    <iconPacks:PackIconMaterial.RenderTransform>
                        <RotateTransform x:Name="cogsRotation" Angle="0" CenterX="30" CenterY="30"/>
                    </iconPacks:PackIconMaterial.RenderTransform>
                    <iconPacks:PackIconMaterial.Triggers>
                        <EventTrigger RoutedEvent="iconPacks:PackIconMaterial.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="cogsRotation" 
                                        Storyboard.TargetProperty="Angle"
                                        From="0" To="360" Duration="0:0:20" 
                                        RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </iconPacks:PackIconMaterial.Triggers>
                </iconPacks:PackIconMaterial>
            </Canvas>
        </Grid>
        
        <materialDesign:Card Style="{StaticResource CardStyle}" Width="350" Height="480" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <materialDesign:PackIcon Kind="AccountHardHat" Width="64" Height="64" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                       HorizontalAlignment="Center" Margin="0,16,0,0">
                    <materialDesign:PackIcon.RenderTransform>
                        <ScaleTransform x:Name="iconScale" ScaleX="1" ScaleY="1" />
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Triggers>
                        <EventTrigger RoutedEvent="materialDesign:PackIcon.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="iconScale" 
                                        Storyboard.TargetProperty="ScaleX"
                                        From="0.8" To="1.2" Duration="0:0:1.5" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="iconScale" 
                                        Storyboard.TargetProperty="ScaleY"
                                        From="0.8" To="1.2" Duration="0:0:1.5" 
                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </materialDesign:PackIcon.Triggers>
                </materialDesign:PackIcon>
                
                <TextBlock Text="Планировщик работ" 
                          Style="{StaticResource HeaderTextStyle}" 
                          HorizontalAlignment="Center" 
                          Margin="0,16,0,32"/>
                
                <TextBox x:Name="txtUsername" 
                        materialDesign:HintAssist.Hint="Логин"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Margin="0,0,0,16"
                        KeyDown="InputField_KeyDown"/>
                
                <PasswordBox x:Name="txtPassword" 
                            materialDesign:HintAssist.Hint="Пароль"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                            Margin="0,0,0,24"
                            KeyDown="InputField_KeyDown"/>
                
                <Button x:Name="btnLogin" 
                       Content="ВОЙТИ" 
                       Click="btnLogin_Click" 
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Height="40" 
                       Margin="0,0,0,20"/>
                
                <Button x:Name="btnRegister" 
                       Content="РЕГИСТРАЦИЯ" 
                       Click="btnRegister_Click" 
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Height="40" 
                       Margin="0,0,0,20"/>
                
                <TextBlock x:Name="txtError" 
                          Foreground="{DynamicResource ValidationErrorBrush}" 
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>