<Window x:Class="praktik.MaterialRequestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Заявка на материалы" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Заявка на материалы" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Статус:" Margin="0,0,0,4"/>
                    <TextBlock x:Name="txtStatus" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="Требуется к:" Margin="0,0,0,4"/>
                    <DatePicker x:Name="dpRequiredDate" Margin="0,0,0,8"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Комментарий:" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtComment" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,8"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Позиции заявки" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
        <DataGrid x:Name="dgItems" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" 
                  SelectionChanged="dgItems_SelectionChanged" Margin="0,0,0,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Материал" Binding="{Binding Material.Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Material.Unit}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Qty}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*"/>
                <DataGridTemplateColumn Header="Действия" Width="120" MinWidth="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="btnDeleteItem_Click" Style="{StaticResource MaterialDesignFlatButton}" Padding="8,4"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="3" Header="Добавить позицию" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cbMaterial" Grid.Column="0" 
                         materialDesign:HintAssist.Hint="Материал"
                         DisplayMemberPath="Name" Margin="0,0,8,0"/>
                <TextBox x:Name="txtQty" Grid.Column="1" 
                        materialDesign:HintAssist.Hint="Кол-во" Margin="0,0,8,0"/>
                <TextBox x:Name="txtItemComment" Grid.Column="2" 
                        materialDesign:HintAssist.Hint="Комментарий" Margin="0,0,8,0"/>
                <Button x:Name="btnAddItem" Grid.Column="3" Content="Добавить" 
                       Click="btnAddItem_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить черновик" 
                   Click="btnSave_Click" Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,8,0"/>
            <Button x:Name="btnSubmit" Content="Отправить" 
                   Click="btnSubmit_Click" Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,8,0"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                   Click="btnCancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>

