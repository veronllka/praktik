<Window x:Class="praktik.TaskSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Выбор задачи" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите задачу для создания заявки на материалы" 
                  Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,16"/>

        <DataGrid x:Name="dgTasks" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                 SelectionMode="Single" Margin="0,0,0,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Объект" Binding="{Binding Site.SiteName}" Width="150"/>
                <DataGridTextColumn Header="Бригада" Binding="{Binding Crew.CrewName}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding TaskStatus.TaskStatusName}" Width="120"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate, StringFormat=dd.MM.yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSelect" Content="Выбрать" 
                   Click="btnSelect_Click" Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,8,0"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                   Click="btnCancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>

