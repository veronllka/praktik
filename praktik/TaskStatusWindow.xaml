<Window x:Class="praktik.TaskStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktik"
        mc:Ignorable="d"
        Title="Изменение статуса задачи" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTaskInfo" Grid.Row="0" Margin="10" FontWeight="Bold"/>
        <TextBlock Text="Новый статус:" Grid.Row="1" Margin="10,10,0,5"/>
        <ComboBox x:Name="cbStatuses" Grid.Row="2" Margin="10,0,10,10" DisplayMemberPath="TaskStatusName"/>
        <TextBlock Text="Комментарий:" Grid.Row="3" Margin="10,0,0,5"/>
        <TextBox x:Name="txtComment" Grid.Row="4" Margin="10,0,10,10" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Width="100" Margin="0,0,20,0"/>
            <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
