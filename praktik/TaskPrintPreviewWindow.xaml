<Window x:Class="praktik.TaskPrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Предпросмотр печати задачи" Height="700" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Padding="30" x:Name="PrintContent">
                <StackPanel>
                    <!-- Заголовок -->
                    <TextBlock x:Name="txtTitle" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
                    
                    <!-- Объект -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Объект:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                        <TextBlock x:Name="txtSite" FontSize="14" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Бригада и бригадир -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Бригада:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                        <TextBlock x:Name="txtCrew" FontSize="14" Margin="0,2,0,0"/>
                        <TextBlock x:Name="txtBrigadier" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Период выполнения -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Период выполнения:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                        <TextBlock x:Name="txtPeriod" FontSize="14" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Приоритет и статус -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Приоритет:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                            <TextBlock x:Name="txtPriority" FontSize="14" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Статус:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                            <TextBlock x:Name="txtStatus" FontSize="14" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Прогресс и комментарий -->
                    <StackPanel x:Name="pnlProgress" Margin="0,0,0,15" Visibility="Collapsed">
                        <TextBlock Text="Последний прогресс:" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                        <TextBlock x:Name="txtProgress" FontSize="14" Margin="0,2,0,5"/>
                        <TextBlock Text="Комментарий:" FontWeight="SemiBold" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                        <TextBlock x:Name="txtComment" FontSize="12" TextWrapping="Wrap" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- QR-код -->
                    <StackPanel x:Name="pnlQR" Margin="0,20,0,15" HorizontalAlignment="Center">
                        <TextBlock Text="Отсканируйте QR-код для быстрого доступа к задаче" 
                                   FontSize="10" Foreground="#666666" TextAlignment="Center" Margin="0,0,0,10"/>
                        <Image x:Name="imgQRCode" Width="150" Height="150" Stretch="Uniform"/>
                    </StackPanel>

                    <!-- Подвал -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,10,0,0">
                        <StackPanel>
                            <TextBlock x:Name="txtPrintDate" FontSize="10" Foreground="#999999" TextAlignment="Right"/>
                            <TextBlock x:Name="txtPrintedBy" FontSize="10" Foreground="#999999" TextAlignment="Right" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10">
            <CheckBox x:Name="chkIncludeQR" Content="Включить QR-код" IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0" Checked="chkIncludeQR_CheckedChanged" Unchecked="chkIncludeQR_CheckedChanged"/>
            <Button Content="Печать" Click="btnPrint_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="btnCancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

